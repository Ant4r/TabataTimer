<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tabata_config_list_row"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.david.tabatatimer.TabataConfigListRow">

    <TextView
        android:id="@+id/TabataName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TabataLabel"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TabataName"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/prepare_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5px"
            android:text="Prepare" />

        <TextView
            android:id="@+id/work_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5px"
            android:text="Work" />

        <TextView
            android:id="@+id/rest_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5px"
            android:text="Rest" />

        <TextView
            android:id="@+id/cycle_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5px"
            android:text="Cycle" />

        <TextView
            android:id="@+id/tabatas_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5px"
            android:text="Tabatas" />
    </LinearLayout>

</RelativeLayout>
